@model IEnumerable<BizCommerce.Entrevista.Aplicacao.Models.Profissional>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Incluir", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome do profissional
        </th>
        <th>
            Data da admissão
        </th>
        <th>
            Data do desligamento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom_profissional)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dat_admissao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dat_desligamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_profissional }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id_profissional }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id_profissional })
        </td>
    </tr>
}

</table>
