@model AnimalFinder.Models.Animal

@{
    ViewData["Title"] = "Alterar registro do animal desaparecido";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Find">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <input asp-for="Nome" type="hidden" class="form-control" />
            <input asp-for="Idade" type="hidden" class="form-control" />
            <input asp-for="InformacoesExtras" type="hidden" class="form-control" />
            <input asp-for="Cidade" type="hidden" class="form-control" />

            <div class="form-group" style="display: none;">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<AnimalFinder.Models.Definicoes.Estado>()"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<AnimalFinder.Models.Definicoes.SituacaoAnimal>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EncontradoPor" class="control-label"></label>
                <input asp-for="EncontradoPor" class="form-control" />
                <span asp-validation-for="EncontradoPor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TelefoneContato" class="control-label"></label>
                <input asp-for="TelefoneContato" class="form-control" />
                <span asp-validation-for="TelefoneContato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <textarea asp-for="Localizacao" class="form-control" rows="5" cols="40"> </textarea>
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para listagem de animais desaparecidos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
